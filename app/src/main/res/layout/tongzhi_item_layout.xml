<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_margin="10dp"
        android:id="@+id/tongzhi_xian">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@drawable/w"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/tongzhi_img"
            android:layout_gravity="center"
            android:id="@+id/tongzhi_name"
            android:text="我的私信"
            android:textSize="15sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tongzhi_xian"
        android:textColor="@color/black"
        android:id="@+id/tongzhi_content"
        android:textSize="13sp"
        android:layout_marginStart="20dp"
        android:text="edfrghjwdefrgthyjkfghjk"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:id="@+id/tongzhi_time"
        android:textSize="13sp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="20dp"
        android:text="werftyuwergthyju"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#FF909090"/>
</LinearLayout>
